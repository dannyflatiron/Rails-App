<h1>All Missions</h1>

<%= form_tag("/missions", method: 'get') do %>
  <%= label_tag(:q, "Search for:") %>
  <%= text_field_tag(:q) %>
  <%= submit_tag("Search") %>
<% end %>
<br>
<%= form_tag("/missions", method: 'get') do %>
  <%= label_tag(:category_id, "Select a Category:") %>
  <%= collection_select(:mission,:category_id, Category.all,:id, :name) %>
  <%= submit_tag("Filter") %>
<% end %>
<br>
 <p><%= link_to "Create a new mission", new_mission_path %></p>
 <br>
<strong>MISSION...CATEGORY...NAME...IS...NOT...WORKING...WHY?</strong>
<% @missions.each do |mission| %>
    <p><strong>Mission Title:</strong> <%= mission.title %> <strong>Mission Description:</strong> <%= mission.content %> <strong>Mission Category:</strong> <% mission.category.name %></p>
<% end %>

